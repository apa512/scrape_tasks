<% content_for :title, "Web scraper" %>

<div class="w-full max-w-4xl mx-auto">
  <div class="mb-6">
    <h1 class="text-2xl font-semibold text-slate-800">Web scraper</h1>
    <p class="text-slate-600">Extract data from websites using CSS selectors</p>
  </div>

  <div class="bg-white rounded-lg shadow-sm" id="scrape-form" data-controller="scrape-form">
    <!-- URL Input Section -->
    <div class="bg-slate-800 p-5">
      <form data-action="submit->scrape-form#submitForm">
        <div class="flex flex-col sm:flex-row gap-3">
          <div class="flex-grow">
            <label for="url" class="block text-xs font-semibold text-slate-300 uppercase tracking-wider mb-1.5">URL</label>
            <input type="url" id="url" name="url" required
                 class="block w-full p-2.5 bg-slate-700 border-0 rounded-md text-white placeholder-slate-400"
                 placeholder="https://example.com"
                 data-scrape-form-target="urlInput">
          </div>
          <div class="self-end">
            <button type="submit" class="py-2.5 px-5 bg-teal-500 text-white font-medium rounded-md hover:bg-teal-600 transition-colors">
              Extract
            </button>
          </div>
        </div>
      </form>
    </div>

    <!-- Selector Configuration -->
    <div class="p-6">
      <div class="grid md:grid-cols-2 gap-5">
        <!-- Fields Column -->
        <div>
          <div class="flex justify-between items-center mb-3">
            <h2 class="text-sm font-semibold text-slate-700">Fields</h2>
            <button type="button"
                  class="py-1.5 px-3 bg-slate-800 text-white rounded-md text-xs font-medium hover:bg-slate-700 transition-colors"
                  data-action="click->scrape-form#addField">
              Add field
            </button>
          </div>

          <div class="space-y-3 bg-slate-50 p-4 rounded-md border border-slate-200" data-scrape-form-target="fieldsList">
            <div class="field-item">
              <div class="mb-1.5">
                <input type="text" name="field_name[]" placeholder="Field name"
                      class="w-full p-2 bg-white border border-slate-200 rounded-md text-sm placeholder-slate-400">
              </div>
              <div class="flex items-center gap-2">
                <input type="text" name="field_selector[]" placeholder="CSS selector"
                      class="flex-grow p-2 bg-white border border-slate-200 rounded-md text-sm placeholder-slate-400">
              </div>
            </div>
          </div>
        </div>

        <!-- Meta Fields Column -->
        <div>
          <div class="flex justify-between items-center mb-3">
            <h2 class="text-sm font-semibold text-slate-700">Meta fields</h2>
            <button type="button"
                  class="py-1.5 px-3 bg-slate-800 text-white rounded-md text-xs font-medium hover:bg-slate-700 transition-colors"
                  data-action="click->scrape-form#addMetaField">
              Add meta
            </button>
          </div>

          <div class="space-y-3 bg-slate-50 p-4 rounded-md border border-slate-200" data-scrape-form-target="metaFieldsList">
            <div class="meta-field-item">
              <input type="text" name="meta_field[]" placeholder="Meta name (e.g. description)"
                    class="w-full p-2 bg-white border border-slate-200 rounded-md text-sm placeholder-slate-400">
            </div>
          </div>
        </div>
      </div>

      <!-- Buttons -->
      <div class="mt-5 flex">
        <button type="button"
              class="py-2 px-4 border border-slate-200 text-slate-600 rounded-md hover:bg-slate-50 transition-colors"
              data-action="click->scrape-form#resetForm">
          Reset
        </button>
      </div>
    </div>

    <!-- Results Section -->
    <div class="hidden border-t border-slate-100 p-6 bg-slate-50" data-scrape-form-target="resultsContainer">
      <div class="mb-3 flex justify-between items-center">
        <h2 class="text-sm font-semibold text-slate-700">Results</h2>
        <button type="button" class="text-xs text-teal-600 hover:text-teal-700 transition-colors" data-action="click->scrape-form#copyResults">
          Copy results
        </button>
      </div>

      <div class="bg-slate-900 rounded-md p-4 overflow-x-auto">
        <pre data-scrape-form-target="resultsContent" class="text-slate-300 text-sm font-mono whitespace-pre-wrap"></pre>
      </div>
    </div>
  </div>

  <!-- Tips -->
  <div class="mt-4 bg-white rounded-md px-4 py-3 text-xs text-slate-500 border border-slate-200">
    <span class="text-slate-700 font-medium">Tips:</span>
    Field name is the key in JSON results.
    CSS selector finds elements (e.g., "h1.title", ".price").
    Meta fields extract meta tags.
  </div>
</div>
